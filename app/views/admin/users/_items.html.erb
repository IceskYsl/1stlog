<table width="100%" align="center" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td class="rightmainbody">
      <table width="100%" align="center" border="0" cellspacing="0" cellpadding="0">
        
        <tr class="tdbheader">
          <td nowrap width="16%">名称</td>
          <td nowrap width="10%">Email</td>
          
          <td nowrap width="20%">用户组</td>
          <td nowrap width="20%">注册时间</td>
          <td nowrap width="20%">操作</td>
        </tr>
        
        <% for user in @users %>
          <tr class="tablecell">
            <td><%= link_to "#{user.nickname}",edit_admin_user_path(user.id),{:title=>user.personality}%></td>
              <td><%=user.email%></td>
              <td><%=user.user_group.title%></td>
              <td><%=user.created_at.to_s(:db)%></td>
                <td><%= link_to '查看', admin_user_path(user.id) %>
                  ,<%= link_to '编辑', edit_admin_user_path(user.id) %>
                ,<%= link_to '删除', { :action => 'destroy', :id => user }, :confirm => 'Are you sure?', :method => :post %></td>
              </tr>
            <% end %>
    
     
                    
              
            <tr class="tablecell">
              <td colspan="8" nowrap="nowrap">
                <div class="records">页:<%= @users.current_page%>/<%=@users.page_count %>,记录:<%=@users.total_entries %></div>
                <div class="multipage"><%= will_paginate @users %></div>
              </td>
          
            </tr>
        
            <tr>
              <td class="tablebottom" colspan="9"></td>
            </tr>
          </table>
        </td>
    
      </tr>
  
    </table>